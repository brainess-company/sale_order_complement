<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_line_tree_inherit_brand_ncm" model="ir.ui.view">
        <field name="name">sale.order.line.tree.inherit.brand.ncm</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='product_uom_qty']" position="after">
                <field name="brand_id" string="Marca"/>
                <field name="ncm_id" string="Ncm"/>
            </xpath>
        </field>
    </record>
</odoo>
