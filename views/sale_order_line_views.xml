<odoo>
    <record id="l10n_br_sale_order_line_inherit" model="ir.ui.view">
        <field name="name">l10n_br.sale.order.line.form.inherit</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_form" />
        <field name="arch" type="xml">
            <!-- Adiciona os campos de marca e NCM após o produto -->
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="brand_id" options="{'no_create': True}" domain="[('product_id', '=', product_id)]" />
                <field name="ncm_id" options="{'no_create': True}" domain="[('product_id', '=', product_id)]" />
            </xpath>
        </field>
    </record>
</odoo>
