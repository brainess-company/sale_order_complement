<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_with_ncm_brand" model="ir.ui.view">
        <field name="name">sale.order.form.with.ncm.brand</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <!-- Adiciona os campos ncm_id e brand_id na linha do pedido -->
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                <field name="ncm_id" />
                <field name="brand_id" />
            </xpath>

            <!-- Garante que os campos apareçam no formulário da linha do pedido -->
            <xpath expr="//field[@name='order_line']/form/sheet" position="inside">
                <group>
                    <field name="ncm_id" />
                    <field name="brand_id" />
                </group>
            </xpath>
        </field>
    </record>

</odoo>
