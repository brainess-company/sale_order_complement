<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="portal_sale_order_template_inherit" inherit_id="sale.portal_my_orders">
        <!-- Adicionando as colunas NCM e Marca no cabeÃ§alho da tabela -->
        <xpath expr="//table[contains(@class, 'table-sm') and contains(@class, 'table-hover')]/thead/tr" position="inside">
            <th>NCM</th>
            <th>Marca</th>
        </xpath>

        <!-- Adicionando os valores de NCM e Marca no corpo da tabela -->
        <xpath expr="//table[contains(@class, 'table-sm') and contains(@class, 'table-hover')]/tbody/tr" position="inside">
            <td>
                <t t-esc="line.product_id.ncm_code or ''"/>
            </td>
            <td>
                <t t-esc="line.product_id.brand_id.name or ''"/>
            </td>
        </xpath>
    </template>
</odoo>
