<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="portal_sale_order_template_inherit" inherit_id="sale_order_portal_template">
        <!-- Adicionando as colunas NCM e Marca no cabeÃ§alho da tabela -->
        <xpath expr="//table[contains(@class, 'table-sm') and contains(@class, 'table-hover')]/thead" position="inside">
            <tr>
                <th>NCM</th>
                <th>Marca</th>
            </tr>
        </xpath>

        <!-- Adicionando os valores de NCM e Marca no corpo da tabela -->
        <xpath expr="//table[contains(@class, 'table-sm') and contains(@class, 'table-hover')]/tbody" position="inside">
            <tr>
                <td>
                    <t t-esc="line.product_id.ncm_code or ''"/>
                </td>
                <td>
                    <t t-esc="line.product_id.brand_id.name or ''"/>
                </td>
            </tr>
        </xpath>
    </template>
</odoo>
