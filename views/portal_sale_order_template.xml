<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="portal_sale_order_template_inherit" inherit_id="sale.portal_my_orders">
        <xpath expr="//table[contains(@class, 'table-sm') and contains(@class, 'table-hover')]/thead" position="inside">
            <th>NCM</th>
            <th>Marca</th>
        </xpath>
        <xpath expr="//table[contains(@class, 'table-sm') and contains(@class, 'table-hover')]/tbody/tr" position="inside">
            <td>
                <t t-esc="line.product_id.ncm_id.name or ''"/>
            </td>
            <td>
                <t t-esc="line.product_id.brand_id.name or ''"/>
            </td>
        </xpath>

    </template>
</odoo>
